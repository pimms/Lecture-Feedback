<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:minHeight="70dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/today_text_view_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Algoritmiske Metoder"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/today_text_view_lecturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/today_text_view_course_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Haug, K105"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/today_text_view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/today_text_view_lecturer"
        android:layout_alignBottom="@+id/today_text_view_lecturer"
        android:layout_alignParentRight="true"
        android:text="12:15-14:00"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
</RelativeLayout>
