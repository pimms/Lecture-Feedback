<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:minHeight="70dp"
    android:background="@drawable/separator_background"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/lecture_text_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nov 18"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10:15 - 12:00"
        android:id="@+id/lecture_text_view_time"
        android:layout_below="@+id/lecture_text_view_date"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Haug"
        android:id="@+id/lecture_text_view_lecturer"
        android:layout_alignBaseline="@+id/lecture_text_view_date"
        android:layout_alignBottom="@+id/lecture_text_view_date"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="K105"
        android:id="@+id/lecture_text_view_room"
        android:layout_alignTop="@+id/lecture_text_view_time"
        android:layout_alignRight="@+id/lecture_text_view_lecturer" />

    <LinearLayout
        android:id="@+id/lecture_view_positive"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:background="@drawable/feed_background_positive"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_alignTop="@+id/lecture_view_negative"
        android:layout_toLeftOf="@+id/lecture_view_negative"
        android:layout_marginRight="5dp">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:background="@drawable/thumb_up"
            android:contentDescription="Thumbs up"/>
        <TextView
            android:id="@+id/lecture_text_view_positive"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="#000"
            android:gravity="center|bottom"
            android:textAlignment="gravity"
            android:text="3"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lecture_view_negative"
        android:orientation="vertical"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:background="@drawable/feed_background_negative"
        android:layout_alignBottom="@+id/lecture_text_view_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:background="@drawable/thumb_down"
            android:contentDescription="Thumbs down"/>
        <TextView
            android:id="@+id/lecture_text_view_negative"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="#000"
            android:gravity="center|bottom"
            android:textAlignment="gravity"
            android:text="2"/>
    </LinearLayout>
</RelativeLayout>